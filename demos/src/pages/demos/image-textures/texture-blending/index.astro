---
import Layout from "@/layouts/Layout.astro";
---

<script>
  import GlslRenderer from "@/../../dist";
  import frag from "./_sketch.frag?raw";
  import GUI from "lil-gui";

  const container = document.querySelector("#wrapper") as HTMLElement;

  // Initialize static texture
  const gl = new GlslRenderer(container, frag, {
    texture_1: "/blend-earth.jpg",
    texture_2: "/blend-water.jpg",
    texture_3: "/simplex.jpg",
    threshold: 0.5,
    range: 0.05,
  });

  gl.play();

  // Update custom uniforms
  const gui = new GUI();

  const guiOptions = {
    threshold: 0.5,
    range: 0.05,
  };

  gui.add(guiOptions, "threshold", 0, 1, 0.01).onChange((value: number) => {
    gl.updateUniform("threshold", value);
  });

  gui.add(guiOptions, "range", 0, 1, 0.01).onChange((value: number) => {
    gl.updateUniform("range", value);
  });
</script>

<Layout>
  <section id="wrapper"></section>
</Layout>

<style>
  section {
    height: 100svh;
    touch-action: none;
  }
</style>
