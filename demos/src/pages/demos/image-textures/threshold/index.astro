---
import Layout from "@/layouts/Layout.astro";
---

<script>
  import GlslRenderer from "@/../../dist";
  import frag from "./_sketch.frag?raw";
  import GUI from "lil-gui";

  const container = document.querySelector("#wrapper") as HTMLElement;

  // Initialize static texture
  const gl = new GlslRenderer(container, frag, {
    texture: "/abstract.jpg",
    stepCount: 2,
    offset: 0,
    noise: false,
    noiseAmount: 0.25,
  });

  gl.play();

  // Update custom uniforms
  const gui = new GUI();

  const guiOptions = {
    stepCount: 2,
    offset: 0,
    noise: false,
    noiseAmount: 0.25,
  };

  gui.add(guiOptions, "stepCount", 2, 10, 1).onChange((value: number) => {
    gl.updateUniform("stepCount", value);
  });

  gui.add(guiOptions, "offset", -0.5, 0.5, 0.1).onChange((value: number) => {
    gl.updateUniform("offset", value);
  });

  gui.add(guiOptions, "noise").onChange((value: boolean) => {
    gl.updateUniform("noise", value);
    noiseAmountController.disable(!value);
  });

  const noiseAmountController = gui
    .add(guiOptions, "noiseAmount", 0, 1, 0.01)
    .onChange((value: number) => {
      gl.updateUniform("noiseAmount", value);
    })
    .disable(!guiOptions.noise);
</script>

<Layout>
  <section id="wrapper"></section>
</Layout>

<style>
  section {
    height: 100vh;
  }
</style>
