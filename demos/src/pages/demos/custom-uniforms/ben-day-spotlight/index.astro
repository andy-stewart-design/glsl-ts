---
import Layout from "@/layouts/Layout.astro";
import CodeDialog from "@/components/code-dialog/index.astro";
import sourceCode from "./_sketch.frag?raw";
---

<script>
  import GlslRenderer from "@glsl-ts";
  import frag from "./_sketch.frag?raw";
  import GUI from "lil-gui";

  const container = document.querySelector("#wrapper") as HTMLElement;
  const uniforms = {
    dpi: 12,
  };

  // Initialize custom uniforms
  const gl = new GlslRenderer({ container, frag, uniforms, glVersion: 1 });
  gl.play();

  // Update custom uniforms
  const gui = new GUI();

  const functions = {
    showCode: () => {
      document
        .querySelector<HTMLDialogElement>("dialog.code-dialog")
        ?.showModal();
    },
  };

  gui.add(uniforms, "dpi", 4, 20, 1).onChange((value: number) => {
    gl.updateUniform("dpi", value);
  });

  gui.add(functions, "showCode").name("Show code");
</script>

<Layout>
  <section id="wrapper"></section>
  <CodeDialog class="code-dialog" code={sourceCode} />
</Layout>

<style>
  section {
    height: 100svh;
    touch-action: none;
  }
</style>
